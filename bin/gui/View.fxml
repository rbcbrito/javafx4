<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <TextField fx:id="txtNumber1" layoutX="86.0" layoutY="83.0" prefHeight="38.0" prefWidth="229.0" promptText="First number">
         <font>
            <Font size="13.0" />
         </font></TextField>
      <TextField fx:id="txtNumber2" layoutX="86.0" layoutY="134.0" prefHeight="38.0" prefWidth="229.0" promptText="Second number">
         <font>
            <Font size="13.0" />
         </font></TextField>
      <Button fx:id="btSum" layoutX="90.0" layoutY="190.0" mnemonicParsing="false" onAction="#onBtSumAction" prefHeight="32.0" prefWidth="34.0" text="+">
         <font>
            <Font size="17.0" />
         </font></Button>
      <Label layoutX="124.0" layoutY="337.0" prefHeight="38.0" prefWidth="64.0" text="Result =">
         <font>
            <Font size="16.0" />
