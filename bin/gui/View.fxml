      <Label fx:id="labelResult" layoutX="201.0" layoutY="337.0" prefHeight="38.0" prefWidth="93.0">
         <font>
            <Font size="18.0" />
         </font></Label>
      <Button fx:id="btMinus" layoutX="154.0" layoutY="190.0" mnemonicParsing="false" onAction="#onBtSubstractionAction" prefHeight="32.0" prefWidth="34.0" text="-">
         <font>
            <Font size="17.0" />
