      <Button fx:id="btMultiply" layoutX="277.0" layoutY="190.0" mnemonicParsing="false" onAction="#onBtMultiplyAction" prefHeight="38.0" prefWidth="34.0" text="X">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btSplit" layoutX="213.0" layoutY="190.0" mnemonicParsing="false" onAction="#onBtDivisionAction" prefHeight="38.0" prefWidth="34.0" text="/">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
